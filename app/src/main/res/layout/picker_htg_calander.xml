<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_calendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/txt_500_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="@string/last_start_date" />

        <TextView
            style="@style/txt_400_14"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textHintColor"
            android:text="@string/set_wife_s_last_menstrual_start_date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_htc_left"
            android:layout_width="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginStart="@dimen/margin_4"
            android:contentDescription="@string/back"
            android:src="@drawable/ios_arrow_left" />

        <TextView
            android:id="@+id/tv_htc_title"
            style="@style/txt_500_18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calender_view"
            android:textColor="@color/textColor"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/iv_htc_right"
            android:layout_width="@dimen/dimen_16"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/margin_4"
            android:contentDescription="@string/back"
            android:src="@drawable/ios_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borderColor" />

    <GridView
        android:id="@+id/gv_htc_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="7" />
</LinearLayout>