<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.auth.SpouseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_30"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_20"
            android:contentDescription="@string/back"
            android:onClick="onClickBack"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/txtLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/spouse_information" />

        <TextView
            android:id="@+id/tv_landing_desc"
            style="@style/txt_400_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_12"
            android:text="@string/please_enter_the_name_and_last_menstrual_start_date_of_your_spouse" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/et_spouse_name"
            style="@style/etNormal"
            android:background="@drawable/back_edit_text"
            android:drawableStart="@drawable/ic_profile"
            android:hint="@string/spouse_name"
            android:inputType="textPersonName"
            android:imeOptions="actionNone"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/et_spouse_mood"
            style="@style/etNormal"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/back_edit_text"
            android:drawableStart="@drawable/ic_calendar"
            android:hint="@string/last_menstrual_start"
            android:inputType="none"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/et_spouse_frequence"
            style="@style/etNormal"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/back_edit_text"
            android:drawableStart="@drawable/ic_period"
            android:hint="@string/frequence_mood"
            android:inputType="number"
            tools:ignore="Autofill" />

        <TextView
            style="@style/txtLoginForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/how_to_find_your_wife_s_last_start_date" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_56"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_40"
            android:background="@drawable/back_login_btn"
            android:gravity="center_vertical"
            android:onClick="onClickContinue"
            android:padding="@dimen/padding_14">

            <View
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30" />

            <TextView
                style="@style/txtLoginBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/continue_" />

            <ImageView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:background="@drawable/back_circle_blue"
                android:contentDescription="@string/btnarrow"
                android:padding="@dimen/padding_8"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_spouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_24"
        android:elevation="4dp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/radius_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.hiscycleguide.android.calendar.HTGCalendarPicker
            android:id="@+id/cp_spouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>