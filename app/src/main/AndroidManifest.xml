<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hiscycleguide.android">

    <application
        android:allowBackup="false"
        android:name=".HTGApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.HisCycleGuide"
        android:fullBackupContent="false">

        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LandingActivity" android:theme="@style/Theme.NoActionBar"/>
        <activity android:name=".activity.auth.LoginActivity" android:theme="@style/Theme.NoActionBarAnimation" />
        <activity android:name=".activity.auth.RegisterActivity" android:theme="@style/Theme.NoActionBarAnimation" />
        <activity android:name=".activity.auth.SpouseActivity" android:theme="@style/Theme.NoActionBarAnimation" />
        <activity android:name=".activity.auth.CompleteProfileActivity" android:theme="@style/Theme.NoActionBarAnimation" />
        <activity android:name=".activity.MainActivity" android:theme="@style/Theme.NoActionBarAnimation"/>
        <activity android:name=".activity.SettingActivity" android:theme="@style/Theme.NoActionBarAnimation"/>
        <activity android:name=".activity.PeriodActivity" android:theme="@style/Theme.NoActionBarAnimation"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"
        tools:ignore="ManifestOrder" />

</manifest>